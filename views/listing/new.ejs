<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-8 offset-2">
    <h1> Create New Listing </h1>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-lable">Title</lable>
            <input type="text" placeholder="Enter title" name="listing[title]" class="form-control" required>
            <!-- <div class="valid-feedback"> Looks Good </div> -->
            <div class="invalid-feedback"> title required  </div>
        </div>
        <div class="mb-3">
            <lable for="description" class="form-lable">Description</lable>
            <textarea type="text" name="listing[description]" class="form-control" required></textarea>
            <div class="invalid-feedback"> write a short description </div>
        </div>
        <div class="mb-3">
            <lable for="image" class="form-lable">Image</lable>
            <input type="file" name="listing[image]" class="form-control" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="price" class="form-lable">Price</lable>
                <input  placeholder="1200" name="listing[price]" class="form-control"required>
                <div class="invalid-feedback"> Price Should be Valid  </div>
            </div>
            <div class="mb-3 col-md-8">
                <lable for="country" class="form-lable">country</lable>
                <input type="text" placeholder="India" name="listing[country]" class="form-control"required>
                <div class="invalid-feedback"> country name Should be Valid  </div>

            </div>
        </div>
        <div class="mb-3">
            <lable for="location" class="form-lable">Location</lable>
            <input type="text" placeholder="telangana, hyderabad" name="listing[location]" class="form-control" required>
            <div class="invalid-feedback"> Price Should be Valid  </div>
        </div>
        <button class="btn btn-dark add-btn"> create </button>
    </form>
</div>
</div>
<script src="./js/script.js"></script>